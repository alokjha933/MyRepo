package com.src.java;

import java.util.Arrays;

public class Anagram {

	public static void main(String[] args) {

		String str1 = "hearti";
		String str2 = "earthi";
		boolean flag = false;
		if (str1.length() != str2.length()) {
			flag = false;
		} else {

			char[] c1 = str1.toCharArray();
			char[] c2 = str2.toCharArray();

			Arrays.sort(c1);
			Arrays.sort(c2);
			flag = Arrays.equals(c1, c2);

			/*
			 * int count = 0; int count1 = 0; for (int i = 0; i < str1.length(); i++) { for
			 * (int j = 0; j < str2.length(); j++) { if (str1.charAt(i) == str2.charAt(j)) {
			 * count++; }
			 * 
			 * } } for (int i = 0; i < str1.length(); i++) { for (int j = 0; j <
			 * str2.length(); j++) { if (str2.charAt(i) == str1.charAt(j)) { count1++; }
			 * 
			 * } } if (count1 == count) { flag = true; }
			 */
			// flag=Arrays.equals(c1, c2);
		}

		if (flag) {
			System.out.println(str1 + " and " + str2 + " are Anagrams");
		} else {
			System.out.println("Not Anagram");
		}

	}

}
